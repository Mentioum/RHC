extends layout

block append head
	script(type='text/javascript', src="/javascripts/controllers/BlogPostController.js")
block bottomPanel

block blog
	div.row(ng-controller="BlogPostCtrl", data-ng-init="setPosts(#{JSON.stringify(posts)})")
		h1 #{ title}
		h2 Posts
		div(ng-repeat="post in posts")
			.row
				h3 {{ post.title }}
				h5 {{ post.date }}
				p {{ post.body }}
		h2 Add New Post
		form(novalidate, ng-submit="addNewPost()")
			textarea(ng-model="newPost.title", placeholder = "Article Title")
			textarea(ng-model="newPost.body", placeholder = "Article Body")
			button(type="submit") Post Article

