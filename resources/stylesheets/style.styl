html
	background url("/images/bg.jpg") no-repeat center center fixed
	-webkit-background-size cover
	-moz-background-size cover
	-o-background-size cover
	background-size cover

body
	background none

.vertical-padding
	margin-top 10%

.content
	background-color rgba(255,0,0,0.5)
	-moz-box-shadow 0px 0px 10px rgba(0,0,0,0.5)
	-webkit-box-shadow 0px 0px 10px rgba(0,0,0,0.5)
	box-shadow 0px 0px 10px rgba(0,0,0,0.5)
	position fixed
	bottom 0px
	left 0px
	width 100%
	min-height 300px
	padding-top 10px
	padding-bottom 20px
	padding-left 20px
	padding-right 20px
	color white


#footer
	background-color black
	padding-top 10px
	padding-bottom 10px
	text-align left

h1, h2, h3, h4, h5, p
	color white

.footer
	ul
		list-style none
	.right
		text-align right


.sticky-bottom
	position fixed
	bottom 0px
	left 0px
	width 100%
